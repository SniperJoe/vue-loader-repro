{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": ".",
        "outDir": "dist",
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "typeRoots": ["node_modules/@types" ],
        "baseUrl": ".",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "./*.ts",
        "./*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}